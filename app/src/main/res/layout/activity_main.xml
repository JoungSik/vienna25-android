<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp">

    <LinearLayout
        android:id="@+id/container_count"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/text_days"
            style="@style/TextViewNumberTimer"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            style="@style/TextViewTextTimer"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/text_time_days" />

        <TextView
            android:id="@+id/text_hours"
            style="@style/TextViewNumberTimer"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1" />

        <TextView
            style="@style/TextViewTextTimer"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/text_time_hours" />

        <TextView
            android:id="@+id/text_minutes"
            style="@style/TextViewNumberTimer"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1" />

        <TextView
            style="@style/TextViewTextTimer"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/text_time_minutes" />

        <TextView
            android:id="@+id/text_seconds"
            style="@style/TextViewNumberTimer"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1" />

        <TextView
            style="@style/TextViewTextTimer"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/text_time_seconds" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="2"
        android:orientation="vertical">

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/recycler_image"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            tools:ignore="NestedWeights" />

        <com.rbrooks.indefinitepagerindicator.IndefinitePagerIndicator
            android:id="@+id/pager_indicator"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            app:dotColor="@color/colorPrimary"
            app:dotCount="3"
            app:selectedDotColor="@color/colorAccent" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginTop="8dp"
        android:layout_weight="1">

        <com.joung.vienna.CountdownView
            android:id="@+id/count_down_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"/>

        <!--<TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/colorPrimary"
            android:gravity="center"
            android:text="@string/text_ready_update"
            android:textColor="@android:color/white"
            android:textSize="24sp"
            android:textStyle="bold" />-->

    </LinearLayout>

</LinearLayout>