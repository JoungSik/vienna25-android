<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp">

    <LinearLayout
        android:id="@+id/container_count"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/text_days"
            style="@style/TextViewNumberTimer"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            style="@style/TextViewTextTimer"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/text_time_days" />

        <TextView
            android:id="@+id/text_hours"
            style="@style/TextViewNumberTimer"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1" />

        <TextView
            style="@style/TextViewTextTimer"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/text_time_hours" />

        <TextView
            android:id="@+id/text_minutes"
            style="@style/TextViewNumberTimer"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1" />

        <TextView
            style="@style/TextViewTextTimer"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/text_time_minutes" />

        <TextView
            android:id="@+id/text_seconds"
            style="@style/TextViewNumberTimer"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1" />

        <TextView
            style="@style/TextViewTextTimer"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/text_time_seconds" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/container_image"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/container_count"
        android:layout_marginTop="30dp"
        android:orientation="vertical">

        <ImageSwitcher
            android:id="@+id/switcher_image"
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:layout_gravity="center_horizontal" />

        <TextView
            android:id="@+id/text_image"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:textColor="@android:color/black"
            android:textSize="24sp"
            android:textStyle="bold" />

    </LinearLayout>

    <com.airbnb.lottie.LottieAnimationView
        android:layout_width="160dp"
        android:layout_height="160dp"
        android:layout_below="@id/container_image"
        android:layout_centerHorizontal="true"
        app:lottie_autoPlay="true"
        app:lottie_fileName="happy_birth.json"
        app:lottie_loop="true" />

</RelativeLayout>