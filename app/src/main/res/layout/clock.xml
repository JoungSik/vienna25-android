<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:clock="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_gravity="center_horizontal"
    android:orientation="horizontal">

    <com.xenione.digit.TabDigit
        android:id="@+id/charVeryHighDate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        clock:backgroundColor="@android:color/black"
        clock:padding="10dp"
        clock:textColor="@android:color/white"
        clock:textSize="32sp" />

    <com.xenione.digit.TabDigit
        android:id="@+id/charHighDate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        clock:backgroundColor="@android:color/black"
        clock:padding="10dp"
        clock:textColor="@android:color/white"
        clock:textSize="32sp" />

    <com.xenione.digit.TabDigit
        android:id="@+id/charLowDate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        clock:backgroundColor="@android:color/black"
        clock:padding="10dp"
        clock:textColor="@android:color/white"
        clock:textSize="32sp" />

    <View
        android:layout_width="20dp"
        android:layout_height="match_parent"
        android:background="@android:color/black"
        android:paddingLeft="5dp"
        android:paddingRight="5dp" />

    <com.xenione.digit.TabDigit
        android:id="@+id/charHighHour"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        clock:backgroundColor="@android:color/black"
        clock:padding="10dp"
        clock:textColor="@android:color/white"
        clock:textSize="32sp" />

    <com.xenione.digit.TabDigit
        android:id="@+id/charLowHour"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        clock:backgroundColor="@android:color/black"
        clock:padding="10dp"
        clock:textColor="@android:color/white"
        clock:textSize="32sp" />

    <FrameLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:background="@android:color/black"
        android:paddingLeft="5dp"
        android:paddingRight="5dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:gravity="center_vertical"
            android:text="@string/text_clock_regex"
            android:textColor="@android:color/white"
            android:textStyle="bold" />

    </FrameLayout>

    <com.xenione.digit.TabDigit
        android:id="@+id/charHighMinute"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        clock:backgroundColor="@android:color/black"
        clock:padding="10dp"
        clock:textColor="@android:color/white"
        clock:textSize="32sp" />

    <com.xenione.digit.TabDigit
        android:id="@+id/charLowMinute"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        clock:backgroundColor="@android:color/black"
        clock:padding="10dp"
        clock:textColor="@android:color/white"
        clock:textSize="32sp" />

    <FrameLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:background="@android:color/black"
        android:paddingLeft="5dp"
        android:paddingRight="5dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:gravity="center_vertical"
            android:text="@string/text_clock_regex"
            android:textColor="@android:color/white"
            android:textStyle="bold" />

    </FrameLayout>

    <com.xenione.digit.TabDigit
        android:id="@+id/charHighSecond"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        clock:backgroundColor="@android:color/black"
        clock:padding="10dp"
        clock:textColor="@android:color/white"
        clock:textSize="32sp" />

    <com.xenione.digit.TabDigit
        android:id="@+id/charLowSecond"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        clock:backgroundColor="@android:color/black"
        clock:padding="10dp"
        clock:textColor="@android:color/white"
        clock:textSize="32sp" />

</LinearLayout>